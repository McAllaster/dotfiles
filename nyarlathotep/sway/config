### Modes

mode "resize" {
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px
    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

set $mode_system System: exit (e), lock (l), suspend (s), reboot (r), shutdown (Shift+s)

mode "$mode_system" {
  bindsym e exec --no-startup-id swaymsg exit, mode "default"
  bindsym l exec --no-startup-id $lock, mode "default"
  bindsym s exec --no-startup-id systemctl suspend && $lock, mode "default"
  bindsym r exec --no-startup-id systemctl reboot, mode "default"
  bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

  bindsym Return mode "default"
  bindsym Escape mode "default"
}

bindsym $mod+Shift+e mode "$mode_system"

### Bar

bar {
  swaybar_command waybar
}

### Style

exec_always {
  gsettings set org.gnome.desktop.wm.preferences theme "Nordic"
  gsettings set org.gnome.desktop.interface gtk-theme "Nordic"
  gsettings set org.gnome.desktop.interface icon-theme "Adwaita"
  gsettings set org.gnome.desktop.interface cursor-theme "Adwaita"
  gsettings set org.gnome.desktop.interface cursor-size 32
}

seat seat0 xcursor_theme "Adwaita" 32

font pango:monospace 10

# Colors

set $c_black       "#383a42"
set $c_red         "#e45649"
set $c_green       "#50a14f"
set $c_yellow      "#c18401"
set $c_blue        "#0184bc"
set $c_magenta     "#a626a4"
set $c_cyan        "#0997b3"
set $c_white       "#fafafa"
set $c_foreground  "#383a42"
set $c_background  "#fafafa"

set $c_grey        "#e3e3e3"

# <Border> <Background> <Text> [<Indicator> <Child Border>]
client.focused          "$c_green" "$c_green" "$c_foreground" "$c_yellow" "$c_green"
client.focused_inactive "$c_background" "$c_background" "$c_foreground" "$c_yellow" "$c_background"
client.unfocused        "$c_background" "$c_background" "$c_foreground" "$c_yellow" "$c_background"
client.urgent           "$c_red" "$c_red" "$c_foreground" "$c_yellow" "$c_red"
client.placeholder      "$c_magenta" "$c_magenta" "$c_foreground" "$c_yellow" "$c_magenta"

client.background       "$c_background"

default_border pixel 5
gaps inner 10

