### Variables

set $left j
set $down k
set $up l
set $right semicolon
set $mod Mod4

set $term kitty
set $menu wofi --show drun
set $lock swaylock -i /usr/share/pixmaps/nordic-night.jpg
set $screenshot grim -g "$(slurp)" -t png

### Output
output * bg /usr/share/pixmaps/nordic-mountains.jpg fill

output DP-1 mode 3840x2160@144Hz
output DP-1 adaptive_sync on
output DP-1 scale 1.5
output DP-1 pos 0 1440

output DP-2 mode 3840x2160@60hz
output DP-2 adaptive_sync on
output DP-2 scale 1.5
output DP-2 pos 0 0

focus output DP-1

### Input

input "1452:613:Apple_Inc._Magic_Trackpad_2" {
  accel_profile adaptive
  click_method clickfinger
  scroll_method two_finger
  natural_scroll enabled
  scroll_factor 0.2
  tap disabled
}

input "1133:50184:Logitech_USB_Trackball" {
  middle_emulation enabled
  scroll_method on_button_down
  scroll_button button3
  natural_scroll enabled
}

input "8916:4901:Mionix_Naos_7000" {
  accel_profile flat
  pointer_accel 0
}

input "1133:16518:Logitech_G703_LS" {
  accel_profile flat
  pointer_accel 0
}

input "1133:16495:Logitech_MX_Ergo" {
  accel_profile flat
  pointer_accel 0
}

### Key bindings

bindsym $mod+Return exec $term
bindsym $mod+Shift+q kill
bindsym $mod+d exec $menu
floating_modifier $mod normal
bindsym $mod+Shift+c reload
bindsym $mod+p exec $screenshot

# Movement
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

