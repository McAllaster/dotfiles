# Sway-specific cursor theming
#seat seat0 xcursor_theme "Vimix-white-cursors" 64
seat seat0 xcursor_theme "Vimix-white-cursors"
seat seat0 hide_cursor 30000

# Fonts
font pango:sans-serif 10

# Colors
set $c_black      "#383a42"
set $c_red        "#e45649"
set $c_green      "#50a14f"
set $c_yellow     "#c18401"
set $c_blue       "#0184bc"
set $c_magenta    "#a626a4"
set $c_cyan       "#0997b3"
set $c_white      "#fafafa"
set $c_foreground "#383a42"
set $c_background "#fafafa"
set $c_dim        "#d4d4d4"

client.background       "$c_background"
# <Window State>        <Border>     <Bg>         <Text>          [Indicator] [Child Border]
client.focused          "$c_green"   "$c_green"   "$c_foreground" "$c_yellow" "$c_green"
client.focused_inactive "$c_dim"     "$c_dim"     "$c_foreground" "$c_yellow" "$c_dim"
client.unfocused        "$c_dim"     "$c_dim"     "$c_foreground" "$c_yellow" "$c_dim"
client.urgent           "$c_red"     "$c_red"     "$c_foreground" "$c_yellow" "$c_red"
client.placeholder      "$c_magenta" "$c_magenta" "$c_foreground" "$c_yellow" "$c_magenta"

default_border pixel 5
gaps inner 10

### Executions

# Update D-Bus environment variables
exec dbus-update-activation-environment WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=sway

# Notifications
exec mako

# Audio
exec pipewire
exec pipewire-pulse

# Idling
exec swayidle -w timeout 300 'swaylock -f' timeout 600 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' before-sleep 'swaylock -f'

### Window actions

# Automatically remove the Firefox "sharing indicator"
for_window [title="Firefox â€” Sharing Indicator"] floating enable, kill;
for_window [title="Picture-in-Picture"] floating enable, resize set 800 450, move position 100ppt 100ppt, move left 800 px, move up 450 px, sticky enable, no_focus

# Laptop Clamshell Identification
exec_always $HOME/.config/sway/lidstate.sh
